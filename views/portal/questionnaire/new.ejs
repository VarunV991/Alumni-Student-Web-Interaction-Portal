<% include ../../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align:center"> Create new Question</h1>
        <div style="width:30%; margin:30px auto;">
        <form action="/portal/questionnaire" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="Topic">
                </div>
                <div class="form-group">
                    <textarea name="question" id="question" cols="47" rows="2" placeholder="Question"></textarea>
                </div>
                <div class="form-group">
                    <textarea name="description" id="description" cols="47" rows="10" placeholder="Description"></textarea>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-lg btn-primary btn-block" value="Submit!!">
                </div>
            </form>
            <a class="btn btn-lg" href="/portal/questionnaire">Go Back </a>
        </div>
        
    </div>
</div>

<% include ../../partials/footer %>