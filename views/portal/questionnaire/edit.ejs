<% include ../../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align:center"> Edit Question</h1>
        <div style="width:30%; margin:30px auto;">
        <form action="/portal/questionnaire/<%=ques._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="edit[name]" value="<%=ques.name%>"">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="edit[question]" value="<%=ques.question%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="edit[description]" value="<%=ques.description %>">
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-lg btn-primary btn-block" value="Submit!!">
                </div>
            </form>
            <a class="btn btn-lg" href="/portal/questionnaire/<%=ques._id%>">Go Back </a>
        </div>
        
    </div>
</div>

<% include ../../partials/footer %>